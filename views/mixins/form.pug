mixin form-block(label)
    div(class=`mb-4 ${attributes.class}`)
        block

mixin label(text)
    label(
        class=`block mb-2 font-bold text-gray-600 ${attributes.class}`
    )= text

mixin input(name, placeholder = '', type = 'text')
    input(
        name=name 
        type=type 
        placeholder=placeholder 
        class=`py-2 px-4 shadow-inner w-full bg-gray-200 text-gray-600 rounded ${attributes.class}`
        )

mixin button(text, type = 'button')
    button(
        type=type 
        class=`bg-blue-400 rounded w-full p-2 mt-4 text-white font-bold ${attributes.class}`
        )= text